<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    tools:context=".Actividades.Formulario">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_form"
                    android:tint="@color/colorAccent"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0003A9F4"
                        android:backgroundTint="#0003A9F4"
                        android:text="Job Application"
                        android:textColor="@color/colorAccent"
                        android:textSize="35dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please complete the form below to apply for a position with us"
                        android:textColor="@color/colorAccent"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/primary_text"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/namefld"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:layout_marginLeft="5dp"/>

                <EditText
                    android:id="@+id/lastfield"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:hint="Last Name" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Current Address"
                    android:textColor="@color/primary_text"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/streetFld"
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:hint="Street Address"
                        android:textSize="15dp" />
                    <EditText
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:hint="Street Address Line 2"
                        android:textSize="15dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:id="@+id/cityFld"
                            android:hint="City"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/statefld"
                            android:layout_width="144dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:hint="State/Province"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/postalCode"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Postal/ Zip Code"
                            android:inputType="textPostalAddress"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginTop="5dp"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spinner"
                                    android:layout_width="147dp"
                                    android:layout_height="wrap_content"
                                    android:entries="@array/coutries" />
                                <TextView
                                    android:layout_width="99dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="Country"
                                    android:textSize="15dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="Email Address"
                    android:textColor="@color/primary_text"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/emailfld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ex: name@mail.com"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="7dp"
                    android:text="Phone Number"
                    android:textColor="@color/primary_text"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/areafld"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Area Code"
                    android:inputType="number"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/phoneFld"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textSize="15dp" />

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applying for position"
                    android:textColor="@color/primary_text"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/positions"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/position"/>
            </LinearLayout>


        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="@color/primary_text"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/Fecha"
                    android:layout_width="214dp"
                    android:layout_height="36dp"
                    android:hint="DD/MM/YYYY"
                    android:paddingLeft="4dp"
                    android:paddingTop="6dp"
                    android:textColor="#000" />

                <ImageButton
                    android:id="@+id/calendarBtn"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_date_" />

            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Upload resume"
                    android:textColor="@color/primary_text" />

                <ImageButton
                    android:id="@+id/uploadFileBtn"
                    android:layout_width="77dp"
                    android:layout_height="56dp"
                    app:srcCompat="@drawable/ic_file_upload" />

                <TextView
                    android:id="@+id/path"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"
                    android:text="No File uploaded"
                    android:textSize="15dp" />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/CancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_cancel"
                    android:tint="@color/colorPrimaryDark" />

                <ImageButton
                    android:id="@+id/ConfirmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/confirm_check"
                    android:tint="@color/colorPrimary" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

</ScrollView>