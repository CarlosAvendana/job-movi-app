<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formulario">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/abc_btn_check_to_on_mtrl_015" />

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="JOB APPLICATION"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/title"
                android:layout_marginTop="7dp"
                android:text="Please complete the form below to apply for a position with us"
                android:textSize="22px" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout android:orientation="horizontal" android:layout_marginTop="5dp">

            <EditText
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:hint="First Name"
                android:textSize="12dp" />

            <EditText
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:hint="Last Name"
                android:textSize="12dp"/>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="100dp"
        android:layout_height="171dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Current Address"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="Street Address"
                android:textSize="10dp"/>


            <EditText
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="Street Address Line 2"
                android:textSize="10dp"/>

            <LinearLayout
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:hint="City"
                    android:textSize="10dp" />

                <EditText
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:hint="State/Province"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/postalCode"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Postal/ Zip Code"
                    android:inputType="textPostalAddress"
                    android:textSize="12dp" />



                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Country"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </TableRow>

    <TableRow
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="16dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="ex: name@mail.com"
                android:inputType="textEmailAddress" />
        </LinearLayout>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Phone Number"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText7"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Area Code"
                android:inputType="number"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="12dp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:text="Applying for " />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="208dp"
            android:layout_height="match_parent" />
    </TableRow>

    <TableRow
        android:layout_width="411dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:text="Start Date" />

        <EditText
            android:id="@+id/Fecha"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="4dp"
            android:paddingTop="6dp"
            android:hint="Select a Date"
            android:focusable = "false"
            android:textColor="#000" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:text="Upload resume" />

        <Button
            android:id="@+id/button"
            android:text="UPLOAD RESUME" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Submit" />

    </TableRow>
</TableLayout>